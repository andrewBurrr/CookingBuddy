@using CookingBuddy.Pages.ViewRecipe.model

<div class="row align-items-start justify-content-between">
    <div class="col-auto me-auto">    
        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-file-person" viewBox="0 0 16 16">
            <path d="M12 1a1 1 0 0 1 1 1v10.755S12 11 8 11s-5 1.755-5 1.755V2a1 1 0 0 1 1-1h8zM4 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h8a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H4z" />
            <path d="M8 10a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
        </svg>
        Author: @recipe.author
    </div>
    <div class="row align-items-center justify-content-between">
        <div class="col-auto">  Diffculty: @recipe.diffculty  </div>
        <div class="col-auto">
            Rating: @recipe.rating <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-half" viewBox="0 0 16 16">
                <path d="M5.354 5.119 7.538.792A.516.516 0 0 1 8 .5c.183 0 .366.097.465.292l2.184 4.327 4.898.696A.537.537 0 0 1 16 6.32a.548.548 0 0 1-.17.445l-3.523 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256a.52.52 0 0 1-.146.05c-.342.06-.668-.254-.6-.642l.83-4.73L.173 6.765a.55.55 0 0 1-.172-.403.58.58 0 0 1 .085-.302.513.513 0 0 1 .37-.245l4.898-.696zM8 12.027a.5.5 0 0 1 .232.056l3.686 1.894-.694-3.957a.565.565 0 0 1 .162-.505l2.907-2.77-4.052-.576a.525.525 0 0 1-.393-.288L8.001 2.223 8 2.226v9.8z" />
            </svg>
        </div>
    </div>
    <div class="row align-items-center justify-content-between">
        <div class="col-auto">
            Time: @recipe.time <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-alarm" viewBox="0 0 16 16">
                <path d="M8.5 5.5a.5.5 0 0 0-1 0v3.362l-1.429 2.38a.5.5 0 1 0 .858.515l1.5-2.5A.5.5 0 0 0 8.5 9V5.5z" />
                <path d="M6.5 0a.5.5 0 0 0 0 1H7v1.07a7.001 7.001 0 0 0-3.273 12.474l-.602.602a.5.5 0 0 0 .707.708l.746-.746A6.97 6.97 0 0 0 8 16a6.97 6.97 0 0 0 3.422-.892l.746.746a.5.5 0 0 0 .707-.708l-.601-.602A7.001 7.001 0 0 0 9 2.07V1h.5a.5.5 0 0 0 0-1h-3zm1.038 3.018a6.093 6.093 0 0 1 .924 0 6 6 0 1 1-.924 0zM0 3.5c0 .753.333 1.429.86 1.887A8.035 8.035 0 0 1 4.387 1.86 2.5 2.5 0 0 0 0 3.5zM13.5 1c-.753 0-1.429.333-1.887.86a8.035 8.035 0 0 1 3.527 3.527A2.5 2.5 0 0 0 13.5 1z" />
            </svg>
        </div>
        <div class="col-auto">
            Rating: @recipe.price /serving
        </div>
    </div>
        <div class="row align-items-center justify-content-between">
        <div class="col-auto">
            Yield:
        </div>
        <div class="col-auto">
            @recipe.yield servings
        </div>
    </div>
    <div class="row align-items-center justify-content-between">
        <div class="col-auto">
            Nutrition:
        </div>
        <div class="col-auto">
            @recipe.nutrition
        </div>
    </div>
    <div class="row align-items-center justify-content-between">
        <div class="col-auto">
            Tools:
        </div>
        <div class="col-auto">
            @recipe.tools
        </div>

    </div>
    <div class="row align-items-center justify-content-between">
        <div class="col-auto">
            <h1>Ingredients</h1>
        </div>
        <div class="col-auto">
            <button type="button" class="btn btn-secondary">Substitute</button>
        </div>
    </div>
    @foreach(var @i in @recipe.ingredients.Split(",")){
    <div class="row align-items-center justify-content-between">

        <div class="col-auto">
            @i
        </div>
        <div class="col-auto">
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        
                    </label>
                </div>
       </div>      
    </div>
    }

</div>




@code {
    [Parameter]
    public RecipeBodyModel recipe { get; set; }
}
