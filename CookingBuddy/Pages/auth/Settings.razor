@page "/settings"

<div class="container-fluid">
    <h3 class="text-center"><strong>Profile Settings</strong></h3>

    <div class="container-fluid" style="padding-top: 8px; padding-bottom: 20px">
        <div class="col">
            <div class="row justify-content-center">
                <img src="https://i.pinimg.com/736x/8b/16/7a/8b167af653c2399dd93b952a48740620.jpg" class="img-thumbnail" style="width: 100px; height: 100px">
            </div>
            <div class="row-sm">
                <input class="form-control form-control-sm" type="file" id="formFile">
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <form class="form-inline" role="form">
            <div class="form-group" style="padding-bottom: 8px">
                <label for="inputName">Full Name</label>
                <input type="text" class="form-control" id="inputName" placeholder="Jack Green">
            </div>
            <div class="form-group" style="padding-bottom: 8px">
                <label for="inputEmail">Email</label>
                <input type="email" class="form-control" id="inputEmail" placeholder="name@example.com">
            </div>
            <div class="form-group" style="padding-bottom: 8px">
                <label for="inputPassword">Password</label>
                <input type="password" class="form-control" id="inputPassword" placeholder="***********">
            </div>
            <div class="form-group" style="padding-bottom: 8px">
                <button type="button" class="btn btn-outline-secondary btn-sm">Change Password</button>
            </div>
        </form>
    </div>

    <div class="container-fluid" style="padding-top: 20px; padding-bottom: 20px">
        <h5>User Preferences</h5>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="" id="audioCheck">
            <label class="form-check-label" for="audioCheck">
                Mute audio
            </label>
        </div>

        <div class="container-fluid" style="padding-top: 8px; padding-bottom: 8px">
            <h6>Units</h6>
            <select class="form-select" aria-label="Units Select">
                <option selected>Imperial</option>
                <option value="1">Metric</option>
            </select>
        </div>

        <div class="container-fluid" style="padding-top: 8px; padding-bottom: 8px">
            <h6>Language</h6>
            <select class="form-select" aria-label="Language Select">
                <option selected>English</option>
                <option value="1">French</option>
                <option value="2">German</option>
                <option value="3">Japanese</option>
            </select>
        </div>

       <div class="container-fluid" style="padding-top: 20px; padding-bottom: 20px">
            <div class="d-grid gap-3">
                <button type="button" class="btn btn-primary">Manage Recipes</button>
                <button type="button" class="btn btn-danger">Log Out</button>
            </div>
       </div>
    </div>
</div>